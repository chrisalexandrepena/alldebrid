{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "./lib",
    "baseUrl": "./src",
    "lib": ["ES6", "dom"],
    "strictNullChecks": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.step.ts"]
}
